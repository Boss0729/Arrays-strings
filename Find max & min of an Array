#include <iostream>
using namespace std;
int main() {
    int s,max=0,i;
    cout<<"Enter no of elemets to store in the array: ";
    cin>>s;
    int a[s];
    for(i=0;i<s;i++){
        cout<<"Enter element "<<i+1<<": ";
        cin>>a[i];
    }
    int min=a[0];
    for(i=0;i<s;i++){
        if(a[i]>max){
            max=a[i];
        }
    }
    for(i=0;i<s;i++){
        if(min>a[i]){
            min=a[i];
        }
    }
    cout<<"Max element is: "<<max<<endl<<"Minimum element is: "<<min<<endl;

    return 0;
}
/*ouput
Enter no of elemets to store in the array: 3
Enter element 1: 99
Enter element 2: 45
Enter element 3: 65
Max element is: 99
Minimum element is: 45*/
