#include <iostream>
using namespace std;

int main() {
    int s,avg=0,i,sum=0;
    cout<<"Enter no of elemets to store in the array: ";
    cin>>s;
    int a[s];
    for(i=0;i<s;i++){
        cout<<"Enter element "<<i+1<<": ";
        cin>>a[i];
    }
    for(i=0;i<s;i++){
        sum=sum+a[i];
    }
    cout<<"Sum is: "<<sum<<endl;
    avg=sum/s;
    cout<<"Avg is: "<<avg;
    return 0;
}
/*Output
Enter no of elemets to store in the array: 3
Enter element 1: 1
Enter element 2: 2
Enter element 3: 3
Sum is: 6
Avg is: 2*/
